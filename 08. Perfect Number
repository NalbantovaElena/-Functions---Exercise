function solve(num) {
    sum = 0
    for (let i = 1; i < num; i++) {
        if (num % i === 0) {
            sum += i
            //console.log(i)
        }

    }
    //console.log(sum)
    //console.log(num)
    if (sum === num) {
        console.log(`We have a perfect number!`)
    } else {
        console.log(`It's not so perfect.`)
    }
}
